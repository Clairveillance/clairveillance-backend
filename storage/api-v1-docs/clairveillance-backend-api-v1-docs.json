    "servers": [
        {
            "url": "http://localhost:8000/api/v1",
            "description": "Current Version"
        },
        {
            "url": "http://localhost:8000/api/v1",
            "description": "Version 1"
        }
    ],
    "paths": {
        "/users": {
            "get": {
                "tags": [
                    "Users"
                ],
                "summary": "Show users list.",
                "description": "Display a listing of all users.\r\n *     See parameters below.",
                "parameters": [
                    {
                        "$ref": "#/components/parameters/UsersParametersOrderBy"
                    },
                    {
                        "$ref": "#/components/parameters/UsersParametersOrderDirection"
                    },
                    {
                        "$ref": "#/components/parameters/UsersParametersPage"
                    },
                    {
                        "$ref": "#/components/parameters/UsersParametersPerPage"
                    },
                    {
                        "$ref": "#/components/parameters/UsersParametersProfile"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "403": {
                        "description": "Forbidden"
                    },
                    "404": {
                        "description": "Not Found"
                    },
                    "405": {
                        "description": "Method Not Allowed"
                    },
                    "422": {
                        "description": "Unprocessable Content"
                    },
                    "429": {
                        "description": "Too Many Requests"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/users/{uuid}": {
            "get": {
                "tags": [
                    "Users"
                ],
                "summary": "Show user data.",
                "description": "Display a specified user.",
                "parameters": [
                    {
                        "name": "uuid",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "maximum": 36
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "201": {
                        "description": "Created"
                    },
                    "202": {
                        "description": "Accepted"
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "403": {
                        "description": "Forbidden"
                    },
                    "404": {
                        "description": "Not Found"
                    },
                    "405": {
                        "description": "Method Not Allowed"
                    },
                    "422": {
                        "description": "Unprocessable Content"
                    },
                    "429": {
                        "description": "Too Many Requests"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        }
    },
    "components": {
        "parameters": {
            "UsersParametersOrderBy": {
                "name": "order_by",
                "in": "query",
                "description": "Sort results by a particular field. (optional)\r\n *     When no value is provided, results are sorted by 'username'.",
                "required": false,
                "schema": {
                    "schema": "UsersSchemasOrderBy",
                    "type": "string",
                    "default": "",
                    "enum": [
                        "id",
                        "username",
                        "firstname",
                        "lastname",
                        "email",
                        "created_at",
                        "updated_at"
                    ],
                    "example": ""
                }
            },
            "UsersParametersOrderDirection": {
                "name": "order_direction",
                "in": "query",
                "description": "Sort direction. (optional)\r\n *     When no value is provided, sort direction is 'asc' (ascending).",
                "required": false,
                "schema": {
                    "title": "Order Direction",
                    "type": "string",
                    "default": "",
                    "enum": [
                        "asc",
                        "desc"
                    ],
                    "example": ""
                }
            },
            "UsersParametersPage": {
                "name": "page",
                "in": "query",
                "description": "Page number. (optional)\r\n *     When no value is provided, the first page is displayed.",
                "required": false,
                "schema": {
                    "type": "integer",
                    "format": "int32",
                    "default": "",
                    "example": ""
                }
            },
            "UsersParametersPerPage": {
                "name": "per_page",
                "in": "query",
                "description": "Number of results to return per page. (optional)\r\n *     When no value is provided, 25 results are displayed.\r\n *     For performance reasons, only a maximum of 100 results is allowed.",
                "required": false,
                "schema": {
                    "type": "integer",
                    "format": "int32",
                    "default": "",
                    "maximum": "100",
                    "example": ""
                }
            },
            "UsersParametersProfile": {
                "name": "profile",
                "in": "query",
                "description": "Eager load user profiles. (optional / multiple selection)\r\n *     When 'show' option is selected, profiles are loaded then displayed.\r\n *     When both 'show' and 'unpublished' options are selected, only unpublished profiles are displayed.",
                "required": false,
                "explode": false,
                "schema": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "enum": [
                            "show",
                            "unpublished"
                        ]
                    },
                    "default": "",
                    "example": ""
                }
            }
        }
    }
}